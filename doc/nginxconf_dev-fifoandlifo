# the upstream component nginx needs to connect to
upstream dev.fifoandlifo {
     server  unix:///tmp/dev.fifoandlifo.sock;
     server 127.0.0.1:8001;
}

# configuration of the server
server {
    # the port your site will be served on
    listen      80;
    # the domain name it will serve for
    server_name dev.fifoandlifo.fr; # substitute your machine's IP address or FQDN
    charset     utf-8;

    # max upload size
    client_max_body_size 75M;   # adjust to taste


    location /static {
        alias /var/www/html/dev.fifoandlifo/static; # pour servir les ficier static par nginx plus rapidement
    }

    # Finally, send all non-media requests to the Django server.
    location / {
        uwsgi_pass  dev.fifoandlifo;
        include     uwsgi_params; # the uwsgi_params file you installed
    }
}


